{
  "name": "poloniex-node-api",
  "version": "5.0.2",
  "description": "Poloniex Node.js API",
  "main": "build/index.js",
  "directories": {
    "test": "test"
  },
  "engines": {
    "node": ">=16.13.0",
    "npm": ">=8.1.0"
  },
  "type": "module",
  "types": "build/index.d.ts",
  "scripts": {
    "build": "npm run postpublish && tsc",
    "ci:all": "npm ci && npm run commitlint:all && npm run prettier && npm run lint && npm run test:ci && npm run publish:test && npm run coverage:ci",
    "commitlint": "commitlint --verbose",
    "commitlint:all": "npm run commitlint -- --from=365c8e3e62a60820dbb3136f7928495248770395",
    "coverage": "c8 npm test && c8 report --reporter=lcov",
    "coverage:ci": "npm run prepublishOnly && npm run coverage",
    "docs:build": "rm -rf ./docs && typedoc && npm run prettier:write -- --ignore-path .prettierignore_docs",
    "install:clean": "rm -fr node_modules && rm -f package-lock.json && npm install",
    "lint": "eslint --ext .ts ./",
    "lint:fix": "npm run lint -- --fix",
    "postpublish": "rm -rf ./build",
    "prepare": "husky install",
    "prepublishOnly": "npm run build && npm run prettier:write",
    "prettier": "prettier -c .",
    "prettier:write": "prettier -c -w .",
    "publish:test": "npm publish --dry-run",
    "release": "semantic-release",
    "test": "mocha 'build/test/**/*.spec.js' --ui=tdd --full-trace --bail",
    "test:ci": "npm run prepublishOnly && npm test && npm run postpublish",
    "ts-node": "node --loader ts-node/esm"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vansergen/poloniex-node-api.git"
  },
  "keywords": [
    "Poloniex",
    "crypto",
    "exchange",
    "API"
  ],
  "author": "Sergey Bakulin <sergey.bakulin.github@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vansergen/poloniex-node-api/issues"
  },
  "homepage": "https://github.com/vansergen/poloniex-node-api#readme",
  "dependencies": {
    "rpc-request": "^6.0.2",
    "ws": "^8.8.0"
  },
  "peerDependencies": {
    "@types/ws": "^8.5.3"
  },
  "devDependencies": {
    "@b2broker/tsconfig": "^1.0.3",
    "@binden/semantic-release-config": "^1.1.1",
    "@types/mocha": "^9.1.1",
    "c8": "^7.11.3",
    "commitlint-config-b2broker": "^1.0.7",
    "eslint-config-b2broker-ts": "^2.0.1",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "mocha": "^10.0.0",
    "nock": "^13.2.9",
    "prettier": "^2.8.2",
    "ts-node": "^10.9.1",
    "typedoc": "^0.23.24"
  },
  "funding": {
    "type": "Coinbase Commerce",
    "url": "https://commerce.coinbase.com/checkout/8e527468-c00a-49e9-aa1d-a08bf49d1686"
  }
}
