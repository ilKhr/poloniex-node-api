{
  "name": "poloniex-node-api",
  "version": "0.5.2",
  "description": "Poloniex Node.js API",
  "main": "index.js",
  "directories": {
    "lib": "lib",
    "test": "tests"
  },
  "engines": {
    "node": ">=10.16.0"
  },
  "type": "commonjs",
  "types": "index.d.ts",
  "scripts": {
    "lint": "eslint --ext .ts,.js ./",
    "lint-fix": "npm run lint -- --fix",
    "prettier": "prettier -c **/*.{js,md,ts,json}",
    "prettier-write": "npm run prettier -- --write",
    "generate-docs": "jsdoc ./ -c jsdoc.json",
    "test": "mocha --full-trace --ui tdd --bail --reporter spec tests/*.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vansergen/poloniex-node-api.git"
  },
  "keywords": [
    "Poloniex",
    "crypto",
    "exchange",
    "API"
  ],
  "author": "Sergey Bakulin",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vansergen/poloniex-node-api/issues"
  },
  "homepage": "https://github.com/vansergen/poloniex-node-api#readme",
  "dependencies": {
    "ws": "^7.2.0"
  },
  "devDependencies": {
    "@types/mocha": "^5.2.7",
    "@typescript-eslint/eslint-plugin": "^2.10.0",
    "@typescript-eslint/parser": "^2.10.0",
    "eslint": "^6.7.2",
    "husky": "^3.1.0",
    "jsdoc": "^3.6.3",
    "lint-staged": "^9.5.0",
    "mocha": "^6.2.2",
    "nock": "^11.7.0",
    "prettier": "^1.19.1",
    "ts-node": "^8.5.4",
    "typescript": "^3.7.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,json,md}": [
      "prettier --write",
      "git add"
    ],
    "*.{ts,js}": [
      "eslint --fix",
      "git add"
    ]
  },
  "funding": {
    "type": "Coinbase Commerce",
    "url": "https://commerce.coinbase.com/checkout/8e527468-c00a-49e9-aa1d-a08bf49d1686"
  }
}
